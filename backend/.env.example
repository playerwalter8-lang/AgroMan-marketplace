# Environment
NODE_ENV=development
PORT=5000

# Database
DATABASE_PATH=./data/agroman.db

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# CORS - Allow requests from these origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5000,https://agro-man-marketplace-project.vercel.app

# API URL (for frontend to call backend)
API_URL=http://localhost:5000

# Production Database (optional - for Supabase, PlanetScale, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# External Services (optional)
# MPESA_API_KEY=
# USSD_GATEWAY_URL=
